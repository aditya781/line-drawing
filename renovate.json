{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],

  "major": { "enabled": false },

  "prConcurrentLimit": 1,

  "branchPrefix": "chore/renovate/",

  "prTitle": "chore(deps): safe dependency updates",
  "prBodyTemplate": "This PR updates all minor and patch dependencies safely.",

  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "safe-updates",
      "groupSlug": "safe-updates",
      "branchName": "chore/renovate/safe-updates",
      "prTitle": "chore(deps): update safe (minor + patch) dependencies"
    }
  ]
}
